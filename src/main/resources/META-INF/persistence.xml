<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="pu">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>org.tds.epsib3.Livre</class>
    <class>org.tds.epsib3.Client</class>
    <class>org.tds.epsib3.Emprunt</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/javatp"/>
      <property name="jakarta.persistence.jdbc.user" value="javatp"/>
      <property name="jakarta.persistence.jdbc.password" value="javatp"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
